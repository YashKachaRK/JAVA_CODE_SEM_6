package first;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;

/**
 * Servlet implementation class Hello
 */
@WebServlet("/Hello")
public class Hello extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public Hello() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
		response.setContentType("text/html");  // first line when make new project
		PrintWriter out = response.getWriter();
		out.println("<html><body>");

		out.println("<h1>Yash Kacha</h1>");
		out.println("</body></html>");
		
		String s1 = request.getParameter("sname");
		String s2 = request.getParameter("semail");
		String s3 = request.getParameter("sphone");
		String s4 = request.getParameter("sgen");
		String s5 = request.getParameter("scourse");
		String s6 = request.getParameter("saddress");
		
//		out.print("Student Name is " + s1 + "<br>");
//		out.print("Student Email is " + s2 + "<br>");
//		out.print("Student Phone is " + s3 + "<br>");
//		out.print("Student Gender is " + s4 + "<br>");
//		out.print("Student Course is " + s5 + "<br>");
//		out.print("Student Address is " + s6 + "<br>");
		
		out.println("<!DOCTYPE html>");
		out.println("<html>");
		out.println("<head>");
		out.println("<title>Student Details</title>");
		out.println("<link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet'>");
		out.println("</head>");

		out.println("<body class='bg-light'>");

		out.println("<div class='container mt-5'>");
		out.println("  <div class='row justify-content-center'>");
		out.println("    <div class='col-md-8'>");

		out.println("      <div class='card shadow'>");
		out.println("        <div class='card-header bg-primary text-white text-center'>");
		out.println("          <h4>Student Registration Details</h4>");
		out.println("        </div>");

		out.println("        <div class='card-body'>");
		out.println("          <table class='table table-bordered'>");

		out.println("            <tr>");
		out.println("              <th>Student Name</th>");
		out.println("              <td>" + s1 + "</td>");
		out.println("            </tr>");

		out.println("            <tr>");
		out.println("              <th>Email</th>");
		out.println("              <td>" + s2 + "</td>");
		out.println("            </tr>");

		out.println("            <tr>");
		out.println("              <th>Phone</th>");
		out.println("              <td>" + s3 + "</td>");
		out.println("            </tr>");

		out.println("            <tr>");
		out.println("              <th>Gender</th>");
		out.println("              <td>" + s4 + "</td>");
		out.println("            </tr>");

		out.println("            <tr>");
		out.println("              <th>Course</th>");
		out.println("              <td>" + s5 + "</td>");
		out.println("            </tr>");

		out.println("            <tr>");
		out.println("              <th>Address</th>");
		out.println("              <td>" + s6 + "</td>");
		out.println("            </tr>");

		out.println("          </table>");
		out.println("        </div>");

		out.println("        <div class='card-footer text-center'>");
		out.println("          <a href='index.html' class='btn btn-primary'>Go Back</a>");
		out.println("        </div>");

		out.println("      </div>");

		out.println("    </div>");
		out.println("  </div>");
		out.println("</div>");

		out.println("</body>");
		out.println("</html>");


	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
